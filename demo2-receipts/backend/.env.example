# Anthropic API Configuration (for Claude Vision)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Azure OpenAI Configuration (for embeddings - task matching feature)
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Server Configuration
PORT=3001
NODE_ENV=development

# Opik Observability (OPTIONAL)
# Opik provides LLM tracing and observability
# If not configured, the app will work normally without tracing

# Option 1: Disable Opik completely
# OPIK_ENABLED=false

# Option 2: Use Cloud Opik (https://www.comet.com/site/products/opik/)
# OPIK_API_KEY=your-opik-api-key-here
# OPIK_WORKSPACE=demo2-receipts
# OPIK_PROJECT_NAME=demo2-receipts

# Option 3: Use Local Opik Instance (recommended for local development)
OPIK_ENABLED=true
OPIK_URL_OVERRIDE=http://localhost:5173/api
OPIK_PROJECT_NAME=demo2-receipts
